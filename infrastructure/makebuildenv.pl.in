	cd docs; \$(MAKE) htmlguide/man-html/${name}.html

EOF
			push @parcel_deps, "$dir/docs/${name}.html";
		}
		elsif ($type eq 'subdir')
		{
			push @parcel_deps, "build_${type}_${name}";
		}
	}

	print MASTER_MAKEFILE <<EOF;
